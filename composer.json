{
    "name": "madewithlove/broadway-mongodb",
    "description": "A mongodb driver for Broadway",
    "license": "MIT",
    "keywords": [
        "cqrs",
        "event sourcing",
        "projector",
        "broadway"
    ],
    "authors": [
        {
            "name": "Madewithlove",
            "email": "heroes@madewithlove.be"
        }
    ],
    "require": {
        "php": ">=5.5.9"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "2.0.*@dev",
        "phpunit/phpunit": "^4.7",
        "mockery/mockery": "^0.9.4",
        "phpspec/phpspec": "^2.2",
        "symfony/var-dumper": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Madewithlove\\Broadway\\MongoDB\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madewithlove\\Broadway\\MongoDB\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix"
    }
}
